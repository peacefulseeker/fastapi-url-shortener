{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": true,
    "tabWidth": 2,
    "singleQuote": false,
    "printWidth": 100,
    "trailingComma": "all",
    "bracketSameLine": true,
    "bracketSpacing": true,
    "plugins": [
        "prettier-plugin-tailwindcss",
        "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "<BUILTIN_MODULES>",
        "",
        "<THIRD_PARTY_MODULES>",
        "",
        "^@(.*)"
    ]
}
